<div class="container">
<h1 class="center">Address For: <%= @location.name %> </h1>


<% if @address.nil? %>
  <div class="center">
    <h4> There are no addresses </h4>
      <%= link_to 'Add Address', new_location_address_path(@location),class:'btn cyan white-text' %></div>
  </div>
<% else %>
<div class="container">
    <div class="row grey lighten-2">
      <div class="col s12 m6"><h6>Street Address<p><%= @address.physical_address%></h6></p></div>
    </div>
    <div class="row grey">
      <div class="col s12 m6"><h6>City<p><%= @address.city %></h6></p></div>
    </div>
    <div class="row grey darken-1">
      <div class="col s12 m6"><h6>Country<p><%= @address.country %></h6></p></div>
    </div>
    <div class="row grey darken-2">
      <div class="col s12 m6"><h6>Description<p><%= @address.description %></h6></p></div>
    </div>
  </div>
<div class="center">
<%= link_to 'Delete', location_address_path(@location, @address),class:'btn cyan white-text', method: :delete, data: {confirm: 'Really Delete Address?'}%>

<%= link_to 'Edit', edit_location_address_path(@location, @address),class:'btn cyan white-text' %>
<%= link_to 'Back', :back ,class:'btn cyan white-text' %>
</div>
  <% end %>
 </div>
